<Window x:Class="PokerTimer.Win.Dialogs.StringInputDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource DarkWindowStyle}"
        Title="StringInputDlg" Height="70" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding InputText, Mode=TwoWay}" Margin="4,2,4,2" />
        
        <Button Style="{StaticResource LightButtonStyle}" Grid.Column="1" Click="btnOk_Click" Content="Ok" Margin="0,2,4,2"/>
    </Grid>
</Window>
